<h2>Edit Recipe</h2>
<p>Creator: <%=  %></p>
<img src="<%= recipe['image_url'] %>" alt="" class='recipe_detail'>

<section class='minutia'>
<form action="/recipes/<%= recipe['id'] %>" method='POST'>
    <input type="hidden" name="_method" value="put">

    <p>
        <label for="">Name:</label>
        <input type="text" name='name' value="<%= recipe['name'] %>">
    </p>

    <p>
        <label for="">Image URL:</label>
        <input type="text" name='image_url' value="<%= recipe['image_url'] %>">
    </p>
    

    <ul>
        <li>
            <label for="">Rating (between 1 and 5):</label>
            <input type="number" name='rating' value="<%= recipe['rating'] %>"  min="1" max="5">
        </li>

        <li>
            <label for="">Servings:</label>
            <input type="text" name='servings' value="<%= recipe['servings'] %>">
        </li>

        <li>
            <label for="">Time:</label>
            <input type="time" name='time' value="<%= recipe['time'] %>">
        </li>

        <li>
            <label for="">Source:</label>
            <input type="text" name='source' value="<%= recipe['source'] %>">
        </li>

        <li>
            <label for="">Category</label>
            <input type="text" name='category' value="<%= recipe['category'] %>">
        </li>
    </ul>

    <p>
        <label for="">Ingredients:</label>
        <textarea name="ingredients" id="" cols="30" rows="10">
            <%= recipe['ingredients'] %>
        </textarea>
    </p>

    <p>
        <label for="">Directions:</label>
        <textarea name="directions" id="" cols="30" rows="10"><% directions.each do |step| %><%= step %><% end %></textarea>
    </p>

    <button>Update Food</button>
    <a href="/recipes/<%= recipe['id'] %>/recipe">Cancel</a>
</form>